{
    "name": "vincentchalamon/dashboard",
    "description": "GitHub dashboard",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "sensio/framework-extra-bundle": "^6.1",
        "symfony/asset": "5.3.*",
        "symfony/cache": "5.3.*",
        "symfony/dotenv": "5.3.*",
        "symfony/expression-language": "5.3.*",
        "symfony/flex": "^1.13",
        "symfony/framework-bundle": "5.3.*",
        "symfony/http-client": "5.3.*",
        "symfony/monolog-bundle": "^3.7",
        "symfony/runtime": "5.3.*",
        "symfony/serializer": "5.3.*",
        "symfony/twig-bundle": "5.3.*",
        "symfony/web-link": "5.3.*",
        "symfony/yaml": "5.3.*",
        "twig/extra-bundle": "^3.3",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpmd/phpmd": "^2.10",
        "rector/rector": "^0.11.37",
        "symfony/debug-bundle": "5.3.*",
        "symfony/maker-bundle": "^1.33",
        "symfony/var-dumper": "5.3.*",
        "symfony/web-profiler-bundle": "5.3.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --ansi",
        "phpstan": "vendor/bin/phpstan analyze",
        "phpmd": "vendor/bin/phpmd src text phpmd.xml",
        "lint-config": "bin/console lint:yaml config --parse-tags",
        "lint-container": "bin/console lint:container",
        "rector": "vendor/bin/rector process",
        "lint": [
            "@lint-config",
            "@lint-container"
        ],
        "test": [
            "@php-cs-fixer --dry-run",
            "@phpstan",
            "@phpmd",
            "@lint",
            "@rector"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        }
    }
}
