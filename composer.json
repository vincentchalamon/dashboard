{
    "name": "vincentchalamon/dashboard",
    "description": "GitHub dashboard",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/asset": "5.2.*",
        "symfony/cache": "5.2.*",
        "symfony/dotenv": "5.2.*",
        "symfony/expression-language": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.2.*",
        "symfony/http-client": "5.2.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/serializer": "5.2.*",
        "symfony/twig-bundle": "^5.2",
        "symfony/web-link": "5.2.*",
        "symfony/yaml": "5.2.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "ekino/phpstan-banned-code": "^0.3.1",
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.64",
        "phpstan/phpstan-deprecation-rules": "^0.12.6",
        "phpstan/phpstan-symfony": "^0.12.12",
        "sensiolabs/security-checker": "^6.0",
        "symfony/debug-bundle": "^5.2",
        "symfony/maker-bundle": "^1.0",
        "symfony/var-dumper": "^5.2",
        "symfony/web-profiler-bundle": "^5.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --ansi",
        "phpstan": "vendor/bin/phpstan analyze",
        "phpmd": "vendor/bin/phpmd src text phpmd.xml",
        "lint": "bin/console lint:yaml config --parse-tags",
        "security": "vendor/bin/security-checker security:check",
        "test": [
            "@php-cs-fixer --dry-run",
            "@phpstan",
            "@phpmd",
            "@lint",
            "@security"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
